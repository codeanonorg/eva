{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "meson",
			"label": "build",
			"target": "meson-out/eva",
			"mode": "build",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "run",
			"command": "${workspaceFolder}/build/meson-out/eva",
			"dependsOn": "build"
		}
	]
}
